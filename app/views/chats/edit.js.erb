$('#chat-<%= @chat.id %> .message-content').after(`
     <form id="edit_chat_<%= @chat.id %>" class="edit-chat-form mt-2" action="/chats/<%= @chat.id %>" accept-charset="UTF-8" data-remote="true" method="post">
       <input name="_method" type="hidden" value="patch">
       <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
       <div class="form-group">
         <textarea class="form-control" rows="2" name="chat[message]"><%= @chat.message %></textarea>
       </div>
       <input type="submit" value="Update" class="btn btn-sm btn-primary">
       <button type="button" class="btn btn-sm btn-secondary cancel-edit">Cancel</button>
     </form>
   `);
