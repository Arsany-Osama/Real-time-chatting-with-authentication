<% if user_signed_in? %>
     <div class="card shadow-lg mx-auto animate__animated animate__fadeIn" style="max-width: 600px;">
       <div class="card-body">
         <h1 class="card-title text-center mb-4">Welcome, <%= current_user.name %>!</h1>
         <div class="d-flex justify-content-center gap-3">
           <%= link_to chats_path, class: 'btn btn-primary btn-lg' do %>
             <i class="fas fa-comments mr-2"></i> Start Chatting
           <% end %>
           <%= link_to destroy_user_session_path, method: :delete, class: 'btn btn-secondary btn-lg' do %>
             <i class="fas fa-sign-out-alt mr-2"></i> Sign Out
           <% end %>
         </div>
       </div>
     </div>
   <% else %>
     <div class="card shadow-lg mx-auto animate__animated animate__fadeIn" style="max-width: 600px;">
       <div class="card-body">
         <h1 class="card-title text-center mb-4">Welcome to ChatApp</h1>
         <p class="text-muted text-center mb-4">Join our community to start real-time chats!</p>
         <div class="d-flex justify-content-center gap-3">
           <%= link_to new_user_session_path, class: 'btn btn-primary btn-lg' do %>
             <i class="fas fa-sign-in-alt mr-2"></i> Sign In
           <% end %>
           <%= link_to new_user_registration_path, class: 'btn btn-secondary btn-lg' do %>
             <i class="fas fa-user-plus mr-2"></i> Sign Up
           <% end %>
         </div>
       </div>
     </div>
   <% end %>
